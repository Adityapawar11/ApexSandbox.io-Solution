public Id classFromCourse(String courseName) {
    // code here
    List<apxio__Course__c> course = [Select Id from apxio__Course__c where apxio__Course__c =: courseName ];
    if(course.size()==0){
        return null;
    }
    apxio__Class__c cl = new apxio__Class__c();
    apxio__Course__c = course[0];
    Name = courseName;
    insert cl;
    return cl.Id;
}