public String formatName(String firstName, String lastName) {
    //code here
    if(IsBlank(firstName) == true && IsBlank(lastName) == true){
        return '';
    }else if(IsBlank(firstName) == true && IsBlank(lastName) == false){
        return lastName;
    }else if(IsBlank(firstName) == false && IsBlank(lastName) == true){
        return firstName;
    }else {
        return lastName + ', '+ firstName;
    }
}