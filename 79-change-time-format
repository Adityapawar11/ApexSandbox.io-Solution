public String changeTimeFormat(String strTime) {
    //code here
    Integer hours = Integer.valueOf(strTime.subStringBefore(':'));
    String Result ;
    if(hours == 12){
        result = '12:' + strTime.subStringAfter(':') + ' PM';
        return result;

    }else if(hours > 12){
        result = String.valueOf(hours - 12) + ':' +strTime.subStringAfter(':') +' PM';
        return result;

    }else
        result = strTime + ' AM';
        return result;
    
}