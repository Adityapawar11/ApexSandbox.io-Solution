public void createCourseAndClass(String name, String description) {
    // code here
   apxio__Course__c  cr = new apxio__Course__c (Name = name , apxio__Course_Details__c  = description);
   insert cr;

   apxio__Class__c cl = new apxio__Class__c (Name = name ,apxio__Description__c = description?.left(255) , apxio__Class__c.Id = cr.Id);
   insert cl;

}